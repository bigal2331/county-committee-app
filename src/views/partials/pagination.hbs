
<nav class="nav mdl-cell mdl-cell--12-col pagination">
    
    {{#if_eq pagination.page 0 }} 

    {{else}}
    
      {{#if_eq pagination.page 1 }}
      {{#paginate pagination type="previous"}}
        <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" href="/news">
             <i class="material-icons">arrow_back</i>
        </a>
      {{/paginate}}
      {{else}}
      {{#paginate pagination type="previous"}}
        <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" href="/news/{{n}}">
             <i class="material-icons">arrow_back</i>
        </a>
      {{/paginate}}
      {{/if_eq}}

    {{/if_eq}}

    {{#if_eq pagination.hasNext true}}

      {{#paginate pagination type="next"}}

       <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" {{#if disabled}}class="disabled"{{/if}}" href="/news/{{n}}">
           <i class="material-icons">arrow_forward</i>
      </a>

      {{/paginate}}

    {{/if_eq}}

</nav>
